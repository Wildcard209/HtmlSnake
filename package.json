{
  "name": "htmlssnake",
  "version": "1.0.0",
  "description": "A modern Snake game built with PixiJS and Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "web": "http-server ./src -p 8080"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "pixi.js": "^7.3.2",
    "howler": "^2.2.4",
    "gsap": "^3.12.2"
  },
  "build": {
    "appId": "com.htmlssnake.app",
    "productName": "HTMLSSnake",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.games"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
